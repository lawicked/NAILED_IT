<div class="min-h-screen bg-base-200 flex items-center justify-center p-4">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="text-3xl font-bold text-center mb-6">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= f.error_notification %>

        <div>
          <%= f.label :email, class: "label mb-2" %>
          <%= f.input_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: "input input-bordered w-full" %>
        </div>

        <div>
          <%= f.label :password, class: "label mb-2" %>
          <%= f.input_field :password, required: true, input_html: { autocomplete: "new-password" }, class: "input input-bordered w-full" %>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "label mb-2" %>
          <%= f.input_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, class: "input input-bordered w-full" %>
        </div>

        <%= f.button :submit, "Sign up", class: "btn btn-primary w-full mt-4" %>
      <% end %>

      <div class="divider">OR</div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
